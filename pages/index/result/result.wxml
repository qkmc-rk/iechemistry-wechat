<!--pages/index/result/result.wxml-->

<van-image width="400rpx" height="600rpx" image-class="transform-type" bindtap="previewImg" src="{{picUrl}}" />
<view style="padding:0 36rpx;margin-top:-66rpx;">
  <van-cell-group>
    <van-field value="{{ username }}" required clearable label="实验名" placeholder="请输入实验名"
      bind:click-icon="onClickIcon" />
    <van-field value="{{ password }}" type="number" label="试管个数" clearable placeholder="请输入个数" required
      border="{{ false }}" />
  </van-cell-group>
  <van-cell-group title="分割参数">
    <van-field label-class="small-label" input-class="big-width" value="{{ password }}" type="number" label="上"
      clearable placeholder="请输入参数" required border="{{ false }}">
    </van-field>

    <van-field value="{{ password }}" type="number" label="左" clearable placeholder="请输入参数" required
      border="{{ false }}" />

    <van-field value="{{ password }}" type="number" label="下" clearable placeholder="请输入参数" required
      border="{{ false }}" />
    <van-field value="{{ password }}" type="number" label="右" clearable placeholder="请输入参数" required
      border="{{ false }}" />

  </van-cell-group>
  <view class="control-btn">
    <van-button  custom-class="right-margin">重拍</van-button>
    <van-button  custom-class="left-margin" type="primary" bindtap="uploadPic" loading="{{uploadloading}}">确定</van-button>
  </view>
</view>