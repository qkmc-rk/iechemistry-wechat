<!--pages/index/prediction/prediction_params/prediction_params.wxml-->
<van-image wx:if="{{rotate==1}}" width="400rpx" height="600rpx" image-class="transform-type" bindtap="previewImg"
  src="{{picUrl}}" />
  <view wx:if="{{rotate==0}}" style="text-align:center;margin-top:36rpx;">
    <van-image  width="600rpx" height="400rpx" bindtap="previewImg" src="{{picUrl}}" />
  </view>

<view class="{{rotate==1?'rotate':'norotate'}}">
  <van-cell-group border="{{ false }}">
    <van-field value="{{ number }}" type="number" bind:input="onNumber" label="试管个数" clearable placeholder="请输入个数" required
      border="{{ false }}" />
  </van-cell-group>
  <van-cell-group title="分割参数" border="{{ false }}">
    <van-field label-class="small-label" bind:input="onTop" input-class="big-width" value="{{ top }}" type="number" label="上"
      clearable placeholder="请输入参数" required border="{{ false }}">
    </van-field>
    <van-field value="{{ left }}" type="number" bind:input="onLeft" label="左" clearable placeholder="请输入参数" required
      border="{{ false }}" />
    <van-field value="{{ bottom }}" type="number" label="下" bind:input="onBottom" clearable placeholder="请输入参数" required
      border="{{ false }}" />
    <van-field value="{{ right }}" type="number" label="右" bind:input="onRight" clearable placeholder="请输入参数" required
      border="{{ false }}" />
  </van-cell-group>
  <view class="control-btn">
    <van-button custom-class="right-margin" bindtap="retake">重拍</van-button>
    <van-button custom-class="left-margin" type="primary" bindtap="uploadPic" loading="{{uploadloading}}">预测
    </van-button>
  </view>
  <van-toast id="van-toast" />
  <van-notify id="van-notify" />
</view>